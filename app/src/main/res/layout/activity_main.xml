<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.edu.appmultimedia.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tria un botÃ³"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:id="@+id/tvPrince" />

    <Button
        android:text="Animacions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:id="@+id/btnAnimacions"
        style="@style/Widget.AppCompat.Button.Colored"
        android:textColorLink="@android:color/black"
        android:layout_below="@+id/tvPrince"
        android:layout_alignParentStart="true" />

    <Button
        android:text="AUDIO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:id="@+id/btnAudio"
        android:layout_below="@+id/btnCamara"
        android:layout_alignParentStart="true"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="?android:attr/statusBarColor" />

    <Button
        android:text="Camara"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnCamara"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@color/colorPrimary"
        android:layout_alignBaseline="@+id/btnAnimacions"
        android:layout_alignBottom="@+id/btnAnimacions"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnAnimacions"
        android:layout_toEndOf="@+id/tvPrince"
        android:id="@+id/button" />

    <Button
        android:text="Video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnVideo"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@android:color/holo_purple"
        android:layout_alignBaseline="@+id/btnAudio"
        android:layout_alignBottom="@+id/btnAudio"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
